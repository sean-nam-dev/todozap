<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.devflowteam.feature_start.StartFragment"
    android:background="?attr/background"
    android:padding="@dimen/standard_padding">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_to_todozap"
        android:textAppearance="@style/TextAppearance.ToDoZap.HeadlineMedium"
        android:textColor="?attr/colorSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.17">

        <RadioButton
            android:id="@+id/defaultRadioButtonServer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/use_default_server"
            android:textAppearance="@style/TextAppearance.ToDoZap.BodyLarge"
            android:textColor="?attr/colorOnPrimary"
            android:buttonTint="?attr/colorSecondary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="34dp"
            android:text="@string/recommended"
            android:textAppearance="@style/TextAppearance.ToDoZap.BodySmall"
            android:textColor="?attr/colorOnPrimary" />

        <Space
            android:layout_width="0dp"
            android:layout_height="20dp" />

        <RadioButton
            android:id="@+id/ownRadioButtonServer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/use_my_own_server"
            android:textAppearance="@style/TextAppearance.ToDoZap.BodyLarge"
            android:textColor="?attr/colorOnPrimary"
            android:buttonTint="?attr/colorSecondary" />

    </RadioGroup>

    <com.google.android.material.textfield.TextInputLayout
        style="?attr/textInputFilledStyle"
        android:id="@+id/textInputLayoutTextServerChange"
        android:visibility="gone"
        android:enabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/link"
        android:paddingHorizontal="@dimen/standard_padding"
        app:prefixText="@string/http"
        app:prefixTextColor="?attr/colorOnPrimary"
        app:prefixTextAppearance="@style/TextAppearance.ToDoZap.BodyLarge"
        app:boxStrokeColor="?attr/colorOnPrimary"
        app:cursorColor="?attr/colorOnPrimary"
        app:hintTextColor="?attr/colorOnPrimary"
        app:layout_constraintBottom_toTopOf="@+id/buttonRestoreAccount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditTextServerChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:textColor="?attr/colorOnPrimary"
            android:textAppearance="@style/TextAppearance.ToDoZap.BodyLarge" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/buttonSeeInstructions"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/see_instructions"
        android:textColor="@color/blue"
        android:textAppearance="@style/TextAppearance.ToDoZap.BodySmall"
        android:visibility="gone"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputOwnServer"
        app:layout_constraintVertical_bias="0.02" />

    <Button
        style="?attr/materialButtonOutlinedStyle"
        android:id="@+id/buttonRestoreAccount"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginBottom="10dp"
        android:text="@string/restore_account"
        android:textColor="?attr/colorOnPrimary"
        android:textAppearance="@style/TextAppearance.ToDoZap.TitleLarge"
        app:layout_constraintBottom_toTopOf="@+id/buttonFinish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonFinish"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="@string/finish"
        android:textAppearance="@style/TextAppearance.ToDoZap.TitleLarge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1" />


    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progressTint="?attr/colorSecondary"
        android:indeterminate="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>